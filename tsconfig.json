{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM"
    ],
    "target": "ES2015",
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "watch": true
  },
  "include": [
    "js/**/*",
    "node_modules/webgl-strict-types/index.d.ts"
  ],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority"
  }
}
